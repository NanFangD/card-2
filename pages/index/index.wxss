.body {
  display: flex;
  flex-direction: column;
  height: 100vh; /* vw */
}

.list-wrap {
  flex-grow: 1;
  position: relative;
}

.list {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.list-scroll-view {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
  margin-left: 2vw;
  margin-right: 2vw;
}


.course-card {
  width: 47vw; /** 47 * 2 = 94 **/

  margin-top: 10px;
  margin-bottom: 10px;
  /* margin: 10px; */
}

.course-card image {
  width: 100%;
  border-radius: 5px;
}

.price, .active {
  color: #23b8ff;
}
/* 底部的样式 */
.bottom_card {
  text-align: center;
  font-size: 25rpx;
  line-height: 1;
  padding-left:50rpx;
  padding-right:50rpx;
  padding-bottom: 30rpx;
  padding-top: 20rpx;
}
.bottom_card image{
  width:70rpx;
}
.bottom{
  display: flex;
  justify-content: space-between;

}
.bottom_card .text{
  color:#777777 ;
}
